<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    tools:context=".MR_Reservation">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Back Button" />

    <!-- Title -->
    <TextView
        android:id="@+id/reservationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/backButton"
        android:layout_marginEnd="16dp" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circular_bg1"
        android:src="@drawable/logodriver"
        android:layout_marginTop="32dp"
        android:layout_below="@id/reservationTitle"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true" />

    <!-- Driver Name -->
    <TextView
        android:id="@+id/driverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juan Masipag"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#081F5C"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@id/profileImage"
        android:layout_toEndOf="@id/profileImage"
        android:layout_marginEnd="16dp" />

    <!-- Driver Location -->
    <TextView
        android:id="@+id/driverLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looc, Mandaue City"
        android:textSize="14sp"
        android:textColor="#6D6D6D"
        android:layout_below="@id/driverName"
        android:layout_toEndOf="@id/profileImage"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Driver Rating -->
    <TextView
        android:id="@+id/driverRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â˜…"
        android:textSize="14sp"
        android:textColor="#FFD700"
        android:layout_below="@id/driverLocation"
        android:layout_toEndOf="@id/profileImage"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/driverRating1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="14sp"
        android:textColor="#FFD700"
        android:layout_below="@id/driverLocation"
        android:layout_toEndOf="@id/driverRating"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="10dp"/>

    <!-- Service Details Section -->
    <TextView
        android:id="@+id/serviceDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service: "
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/profileImage"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="70dp" />

    <TextView
        android:id="@+id/service1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/profileImage"
        android:layout_toRightOf="@id/serviceDetails"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type of Service: "
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/serviceDetails"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/type_Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/serviceDetails"
        android:layout_toRightOf="@id/tos"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/tos"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="90dp" />

    <TextView
        android:id="@+id/dateee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/tos"
        android:layout_toRightOf="@id/date1"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/ti_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: "
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/date1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="87dp" />

    <TextView
        android:id="@+id/time_reserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/date1"
        android:layout_toRightOf="@id/ti_me"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/looc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: "
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/ti_me"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="64dp" />

    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/ti_me"
        android:layout_toRightOf="@id/looc"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination: "
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/looc"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="47dp" />

    <TextView
        android:id="@+id/desti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/looc"
        android:layout_toRightOf="@id/des"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/ve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle: "
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/des"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="73dp" />

    <TextView
        android:id="@+id/vehicle123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/des"
        android:layout_toRightOf="@id/ve"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/modeel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model: "
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/ve"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="81dp" />

    <TextView
        android:id="@+id/model123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/ve"
        android:layout_toRightOf="@id/modeel"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp" />


    <!-- Book Button -->
    <Button
        android:id="@+id/bookButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOOK"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#002B5B"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/modeel"/>

</RelativeLayout>